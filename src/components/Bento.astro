  <article class='bento_8 bento-item'>
    <time id='hour'>hour</time>
    <time id='day'>day</time>
    <time id='date'>date</time>
  </article>
  <article class='bento_9 bento-item'>
    <img
      class='bento_9-img-dark bento_9-img'
      src='/img/star-wars-dark.webp'
      alt='star wars dark'
    />
    <img
      class='bento_9-img-light bento_9-img'
      src='/img/star-wars-light.webp'
      alt='star wars light'
    />
  </article>
</section>

<script>
  import time from './dom/time.js'
  time()
</script>

<style>
  .bento {
    width: 100%;
    display: grid;
    grid-template-columns: repeat(6, 1fr);
    grid-template-rows: repeat(6, 1fr);
    grid-column-gap: 20px;
    grid-row-gap: 20px;
  }

  .bento-item {
    border: 5px solid var(--dark-background);
    border-radius: var(--border-radius);
    background: linear-gradient(
      180deg,
      var(--dark-blue) 32.81%,
      var(--black) 100%
    );
    box-shadow: var(--shadow-elevation-medium);
  }

  .bento_1 {
    grid-area: 1 / 1 / 3 / 5;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    gap: 1rem;
    padding: 1rem;
  }
  .bento_2 {
    grid-area: 1 / 5 / 3 / 7;
  }
  .bento_3 {
    grid-area: 3 / 1 / 5 / 3;
  }
  .bento_4 {
    grid-area: 3 / 3 / 5 / 5;
  }
  .bento_5 {
    grid-area: 3 / 5 / 4 / 7;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
  .bento_6 {
    grid-area: 4 / 5 / 7 / 7;
  }
  .bento_7 {
    grid-area: 5 / 1 / 7 / 4;
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
  .bento_8 {
    grid-area: 5 / 4 / 6 / 5;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    padding: 1rem;
  }

  .bento_9 {
    grid-area: 6 / 4 / 7 / 5;
  }

  .bento_1-header {
    padding: 0;
    display: flex;
    flex-direction: column;
  }

  .bento_1-header h1 {
    font-size: var(--step-3);
    font-weight: 700;
    color: var(--white);
  }

  .bento_1-header span {
    font-size: var(--step-2);
    font-weight: 600;
    color: var(--light-blue);
  }

  .bento_1 p {
    font-size: var(--step--1);
    font-weight: 400;
    color: var(--white);
  }

  .bento_1-footer {
    padding: 0;
  }

  .footer__nav {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    gap: 1rem;
    opacity: 0.6;
  }

  .footer__item {
    color: var(--white);
    scale: 0.9;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .footer__item:hover {
    color: var(--light-blue);
    transform: scale(1.1);
    transition: all 0.3s ease-in-out;
  }

  .bento_3-button {
    cursor: pointer;
    width: 100%;
    height: 100%;
    background: transparent;
    border: none;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    position: relative;
  }

  .beno_3-icon {
    width: 2rem;
    height: 2rem;
    margin-right: 0.5rem;
    position: absolute;
    top: 1rem;
    right: 1rem;

    color: var(--light-blue);
    transition: all 0.3s ease-in-out;
  }

  .bento_3-button:hover .beno_3-icon {
    transform: translateX(3px) translateY(-3px);
  }

  .bento_3 strong {
    font-size: calc(var(--step-5) * 1.5);
    font-weight: 800;
    color: var(--light-blue);
    line-height: 1;
  }

  .bento_3 span {
    font-size: var(--step-2);
    font-weight: 600;
    color: var(--white);
    line-height: 1;
  }

  .bento_5 div {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 0.5rem;
  }

  .bento_5 strong {
    font-size: var(--step-2);
    font-weight: 600;
    color: var(--white);
  }

  .bento_7 blockquote {
    font-size: var(--step-1);
    font-weight: 400;
    color: var(--white);
    text-align: center;
    line-height: 1.5;
  }

  .bento_7 cite {
    font-size: var(--step-1);
    font-weight: 600;
    color: var(--light-blue);
    text-align: center;
    line-height: 1.5;
  }

  .bento_7-icon {
    width: 2rem;
    height: 2rem;
    color: var(--light-blue);

    position: absolute;
    bottom: 1rem;
    right: 1rem;
  }

  .bento_8 time {
    font-size: var(--step--2);
    font-weight: 600;
    color: var(--light-blue);
  }

  .bento_8 time:first-child {
    font-size: var(--step-1);
    font-weight: 700;
    color: var(--white);
  }

  .bento_9-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 25px;
  }

  .hidden {
    display: none;
  }
</style>

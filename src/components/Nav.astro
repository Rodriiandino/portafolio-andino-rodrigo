---
import {
  IconHouse,
  IconExperience,
  IconProjects,
  IconContact,
  IconLanguageNav,
  IconLanguageNavLight,
  IconMoonNav,
  IconSunNav,
  IconTech
} from './icons/icons'

const { currentLocale = 'es' } = Astro
const changeLang = currentLocale === 'en' ? '' : 'en'
---

<nav class='nav' id='nav' data-theme='light'>
  <div class='nav__container'>
    <ul class='nav__list'>
      <li>
        <a href='#home' class='item'>
          <IconHouse />
        </a>
      </li>
      <li>
        <a href='#experience' class='item'>
          <IconExperience />
        </a>
      </li>
      <li>
        <a href='#projects' class='item'>
          <IconProjects />
        </a>
      </li>
      <li>
        <a href='#skills' class='item'>
          <IconTech />
        </a>
      </li>
      <li>
        <a href='#contact' class='item'>
          <IconContact />
        </a>
      </li>
    </ul>
    <div class='nav__list'>
      <a href={`/${changeLang}`} class='utils__button'>
        <IconLanguageNav />
        <IconLanguageNavLight />
      </a>

      <button class='utils__button' btn-switch-theme>
        <IconMoonNav />
        <IconSunNav />
      </button>
    </div>
  </div>
</nav>

<style is:global>
  .nav {
    position: fixed;
    bottom: 10px;
    left: 50%;
    transform: translateX(-50%) translateY(100px);
    padding: 0 1.5rem;
    width: 100%;
    height: fit-content;
    z-index: 100;
    display: flex;
    justify-content: center;
    align-items: center;
    animation: fadeIn linear both;
    animation-timeline: scroll();
    animation-range: 0 300px;
  }

  @keyframes fadeIn {
    to {
      transform: translateX(-50%) translateY(0);
    }
  }

  .nav__container {
    width: 100%;
    max-width: 420px;
    height: 60px;
    display: flex;
    box-shadow: var(--shadow-elevation-medium);
    justify-content: space-evenly;
    align-items: center;
    gap: 1rem;
    padding: 0 1.5rem;
    background-color: var(--sky-blue-transparent);
    backdrop-filter: blur(5px);
    border-radius: var(--border-radius);
  }

  .nav__list {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100%;
    gap: 1rem;
  }

  .item {
    color: var(--white);
    display: flex;
    justify-content: center;
    align-items: center;
    transition: box-shadow 0.3s ease-in-out;
  }

  .item:hover {
    box-shadow: var(--shadow-elevation-medium);
  }

  .nav__list:last-child {
    gap: 0.7rem;
  }

  .utils__button {
    display: flex;
    justify-content: center;
    align-items: center;

    cursor: pointer;
    background-color: transparent;
    border: none;
    transition: transform 0.3s ease-in-out;
  }

  .utils__button:hover {
    transform: scale(1.1);
  }

  [data-theme='dark'] {
    .icon-language-nav-light {
      display: none;
    }

    .icon-sun-nav {
      display: none;
    }
  }

  [data-theme='light'] {
    .icon-language-nav {
      display: none;
    }

    .icon-moon-nav {
      display: none;
    }

    .item {
      color: var(--light-blue);
    }
  }

  @media screen and (max-width: 850px) {
    .nav {
      animation-range: 0 200px;
    }
  }

  @media screen and (max-width: 460px) {
    .nav__container {
      padding: 0 0.5rem;
    }

    .nav__list {
      gap: 0.5rem;
    }

    .nav__list:last-child {
      flex-direction: row;
      gap: 0.7rem;
    }

    .icon__variant-nav {
      width: 32px;
      height: 32px;
    }

    .icon-language-nav,
    .icon-language-nav-light {
      width: 40px;
      height: 40px;
    }

    .icon-moon-nav,
    .icon-sun-nav {
      width: 40px;
      height: 40px;
    }
  }

  @media screen and (max-width: 360px) {
    .nav {
      padding: 0 0.3rem;
    }
  }
</style>
